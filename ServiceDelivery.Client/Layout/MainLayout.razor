@inherits LayoutComponentBase

<NetworkStatusToast />

<div class="page">
    @* <div class="sidebar">
        <NavMenu />
    </div> *@

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <UpdatePrompt></UpdatePrompt>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .update-prompt {
        position: fixed;
        bottom: 20px;
        left: 20px;
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .update-prompt-message {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .update-prompt button {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
    }

    .update-prompt button:hover {
        background-color: #45a049;
    }
</style>

<style>
    .update-toast {
        position: fixed;
        bottom: 1.5rem;
        left: 50%;
        transform: translateX(-50%);
        background-color: #323232;
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 1000;
    }

    .update-toast button {
        margin-left: 1rem;
        background: #2196f3;
        color: white;
        border: none;
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        cursor: pointer;
    }
</style>

<style>
    .network-toast {
        position: fixed;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        padding: 1rem 1.5rem;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        z-index: 9999;
        animation: fade 0.3s ease-in-out;
    }

    .network-toast.online {
        background-color: #28a745;
    }

    .network-toast.offline {
        background-color: #dc3545;
    }

    @@keyframes fade {
        from {
            opacity: 0;
            transform: translateX(-50%) translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }
    }
</style>